# Copy to .env and load with your process manager or dotenv library
# Django
DJANGO_SECRET_KEY=change-me-in-prod
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=foldfresh.in,www.foldfresh.in

# Database
# Production (Postgres): set DATABASE_URL
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME
# Local: leave DATABASE_URL unset to use SQLite (db.sqlite3)

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://foldfresh.in,https://www.foldfresh.in
CSRF_TRUSTED_ORIGINS=https://foldfresh.in,https://www.foldfresh.in

# Security headers/cookies
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=same-origin

# Business config
WHATSAPP_NUMBER=919999999999
PHONE_DISPLAY=+91 98765 43210
PHONE_NUMBER=919876543210
INSTAGRAM_HANDLE=foldfresh.in

# Email (set these in production if you want email notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your@email
EMAIL_HOST_PASSWORD=your_password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=Foldfresh <no-reply@foldfresh.in>
CONTACT_NOTIFY_EMAIL=alerts@foldfresh.in

# WhatsApp webhook verification token
WHATSAPP_VERIFY_TOKEN=change-me

# DRF throttle rates
THROTTLE_ANON=60/min
THROTTLE_USER=120/min
